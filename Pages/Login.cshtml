@page
@model quick_asp_blog.Pages.LoginModel
@{
}

<h2>Login</h2>

<form method="post">
    <div class="mb-3">
        <label for="name">User name</label>
        <input type="text" id="name" name="name" class="form-control" autofocus />
    </div>
    <div class="mb-3">
        <label for="pass">Password</label>
        <input type="password" id="pass" name="pass" class="form-control" />
    </div>
    <input type="hidden" name="return_url" value="@ViewData["ReturnUrl"]" />
    <button class="btn btn-primary" type="submit">Log in</button>

    <p class="mt-3 alert alert-danger @(Model.Error == null ? "d-none" : "")">@Model.Error</p>
</form>